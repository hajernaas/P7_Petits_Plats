{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	//"parser": "babel-eslint",
	//"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",

		"sourceType": "module"
		// "allowImportExportEverywhere": true
	},
	//"plugins": ["@typescript-eslint"],
	"rules": {
		"no-console": "off",
		"indent": ["error", "tab"],
		//"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	},
	"globals": { "GlobalStore": "writable" }
}
